{
  "name": "ynotradio",
  "version": "2.0.0",
  "description": "Build tools for ynotradio.net",
  "scripts": {
    "prestart": "docker-compose up -d && sleep 10 && npm run build && npm run install:wp",
    "start": "npm run watch",
    "dev": "npm run watch",
    "build": "./bin/build.sh",
    "sync": "(source '.env' && bash './bin/db-sync.sh') && npm run build",
    "lint": "./bin/lint.sh",
    "lint:js": "./bin/lint-js.sh",
    "lint:scss": "echo 0",
    "watch": "./bin/watch.sh",
    "deploy": "./bin/deploy.sh",
    "install:wp": "docker-compose run wordpress composer install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ynotradio/site.git"
  },
  "keywords": [
    "Wordpress",
    "Node",
    "Tools",
    "Webpack"
  ],
  "author": "Think Company Development Team",
  "license": "UNLICENSED",
  "homepage": "https://github.com/ynotradio/site",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-loader": "^3.0.4",
    "eslint-plugin-import": "^2.22.1",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.6",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
